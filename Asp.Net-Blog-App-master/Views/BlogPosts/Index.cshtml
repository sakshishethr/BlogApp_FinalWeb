@model IEnumerable<Blog_App.Models.BlogPost>

@{
    ViewData["Title"] = "Index";
}

<div class="container">
    <h1 class="text-center mb-5">Blog Posts</h1>
    <div class="row justify-content-end">
        <div class="col-auto">
            <a class="btn btn-primary" asp-action="Create">Create New</a>
        </div>
    </div>
    <table class="table mt-4">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(model => model.BlogTitle)</th>
                <th>@Html.DisplayNameFor(model => model.BlogContent)</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.BlogTitle)</td>
                    <td>
                        <div class="d-flex justify-content-end">
                            <a class="btn btn-sm btn-outline-secondary mx-1" asp-action="Details" asp-route-id="@item.Id">Details</a>
                            <a class="btn btn-sm btn-outline-primary mx-1" asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                            <a class="btn btn-sm btn-outline-danger mx-1" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
<!-- Bootstrap 5 JavaScript Bundle -->
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>