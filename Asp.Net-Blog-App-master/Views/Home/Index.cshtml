    ViewData["Title"] = "Home Page";
}

<style>
    .hero {
        background-image: url("https://source.unsplash.com/random/1600x900");
        background-size: cover;
        height: 600px;
        display: flex;
        justify-content: center;
        align-items: center;
        color: white;
        text-align: center;
    }

        .hero h1 {
            font-size: 6rem;
